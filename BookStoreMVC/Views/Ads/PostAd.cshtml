@using BookStoreMVC.Data
@using BookStoreMVC.Helper
@model BookStoreMVC.Models.ViewModels.Ad.PostAdViewModel 
@{
    Layout = "_Layout";
}
<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-9 page-content">
                <div class="inner-box category-content">
                    <h2 class="title-2 uppercase">
                        <strong> <i class="icon-docs"></i>Pulsuz Elan Yerləşdir</strong>
                    </h2>

                    <div class="row">
                        <div class="col-sm-12">
                            <form class="form-horizontal" method="post" asp-controller="Ads" asp-action="PostAd" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Janr</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.SelectedGenres, Model.Genres, new {@class = "form-control select-withsearch", @id = "lstGenres", @multiple = "multiple", @title = "Janr Seçin", @name = "SelectGenre"})
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Vəziyyəti</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.AdCondition, Html.GetEnumSelectList<AdOptions.AdCondition>(), new {@class = "form-control select-withoutsearch", @id = "lstGenres", @title = "Vəziyyətini Seçin...",})
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Elanın Növü</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.SellOption, Html.GetEnumSelectList<AdOptions.SellOption>(), new {@class = "form-control select-withoutsearch", @id = "lstGenres", @title = "Satış Növünü Seçin Seçin...",})
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Kitabın Adı</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="Adtitle" asp-for="Name" placeholder="Adı">
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Yazıçı</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="Adtitle" asp-for="Author" placeholder="Adı">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Haqqında</label>
                                    <div class="col-sm-8">
                                        @Html.TextAreaFor(model=>model.Description,new {@class = "form-control", @placeholder = "Haqqında"})
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Qiyməti</label>

                                    <div class="input-group col-sm-8">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">₼</span>
                                        </div>
                                        <input type="text" min="0" id="Price" class="form-control" asp-for="Price" aria-label="Amount (to the nearest azn)">
                                    </div>


                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" for="textarea">Şəkil</label>
                                    <div class="col-lg-8">
                                        @for (int i = 0; i < 4; i++)
                                        {
                                            <div class="mb10">
                                                <input id="input-upload-img1" asp-for="Images" accept="image/*" type="file" class="file" data-preview-file-type="text">
                                            </div>
                                        }
                                        <p class="form-text text-muted">
                                            Minimum 1 şəkil yükləyin. Məhsulun vəziyyətini bildirəcək şəkillərini yükləyin.
                                        </p>
                                    </div>
                                </div>


                                <!-- Button  -->
                                <div class="form-group row">

                                    <div class="col-sm-8">
                                        <button type="submit" id="button1id"
                                                class="btn btn-success btn-lg" asp-action="PostAd" asp-controller="Ads">
                                            Submit
                                        </button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /.page-content -->

            <div class="col-md-3 reg-sidebar">
                <div class="reg-sidebar-inner text-center">
                    <div class="promo-text-box">
                        <i class=" icon-picture fa fa-4x icon-color-1"></i>

                        <h3>
                            <strong>Kitabını Bizimlə Bölüş</strong>
                        </h3>

                        <p> Sayt tam pulsuzdur</p>
                    </div>

                    <div class="card sidebar-card">
                        <div class="card-header uppercase">
                            <small>
                                <strong>Necə Daha Sürətli Satış Etmək Olar?</strong>
                            </small>
                        </div>
                        <div class="card-content">
                            <div class="card-body text-left">
                                <ul class="list-check">
                                    <li> Elanınızın Haqqında Hissəsini Doldurarkən Cəsur Olun</li>
                                    <li> Make sure you post in the correct category</li>
                                    <li> Add nice photos to your ad</li>
                                    <li> Put a reasonable price</li>
                                    <li> Check the item before publish</li>

                                </ul>
                            </div>
                        </div>
                    </div>

                    <input type="button" id="btnSelected" value="Get Selected"/>
                </div>
            </div>
            <!--/.reg-sidebar-->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /.main-container -->

@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script>
$(function() {
   $('.select-withsearch').selectpicker({liveSearch: true,
                                     showSubtext: true});
   $('.select-withoutsearch').selectpicker({showSubtext: true});
})
</script>
}

<script>
function setInputFilter(textbox, inputFilter) {
  ["input", "keydown", "keyup", "mousedown", "mouseup", "select", "contextmenu", "drop"].forEach(function(event) {
    textbox.addEventListener(event, function() {
      if (inputFilter(this.value)) {
        this.oldValue = this.value;
        this.oldSelectionStart = this.selectionStart;
        this.oldSelectionEnd = this.selectionEnd;
      } else if (this.hasOwnProperty("oldValue")) {
        this.value = this.oldValue;
        this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
      } else {
        this.value = "";
      }
    });
  });
}
setInputFilter(document.getElementById("Price"), function(value) {
  return /^-?\d*[.,]?\d{0,2}$/.test(value); });
</script>